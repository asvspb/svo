# Application environment example
ENV=dev

# Scraper / Playwright
HEADLESS=false
USER_AGENT=
NAV_TIMEOUT_MS=60000
WAIT_NETWORK_IDLE_MS=5000
# Comma-separated whitelist (substring or regex) for API endpoints to capture
ENDPOINT_WHITELIST=api,geo,json,FeatureCollection
# Comma-separated blacklist to exclude noisy endpoints (substring or regex)
ENDPOINT_BLACKLIST=
# Ignore responses smaller than N bytes (helps отсечь служебные пинги)
MIN_JSON_BYTES=200
# Save raw JSON per allowed response for диагностики (true/false)
SAVE_RAW_JSON=false
# Telegram (disabled)
# TELEGRAM_ADMIN_IDS=123456789,987654321
# Cron для ежедневной рассылки (UTC): мин час день_месяца месяц день_недели
REPORT_SCHEDULE_CRON=0 21 * * *

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=deepstate
MYSQL_USER=app
MYSQL_PASSWORD=app_pass
SQLALCHEMY_ECHO=false
